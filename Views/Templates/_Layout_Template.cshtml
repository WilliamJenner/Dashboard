@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment hostingEnv

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Test App</title>
    <meta name="app-root" content="@Url.Content("~/")" />

    @await RenderSectionAsync("Styles", required: false)

</head>

<body>
    <div class="body-content">
        @RenderBody()
    </div>

    <% for (var chunk in htmlWebpackPlugin.chunks) { %>
    <% var url = htmlWebpackPlugin.chunks[chunk]; %>
    <% if (htmlWebpackPlugin.options.devServer) { %>
    <script type="module" src=" @Url.Content("<%= url %>")" type="text/javascript"></script><%
    } else { %>
    <script type="module" src="@Url.Content("<%= url %>")"></script>
    <% } %>
    <% } %>

    @await RenderSectionAsync("Scripts", required: false)
    <% if (htmlWebpackPlugin.options.devServer) { %>
    <script type="module" src="<%= htmlWebpackPlugin.options.devServer %>/webpack-dev-server.js"></script>
    <% } %>
</body>

</html>